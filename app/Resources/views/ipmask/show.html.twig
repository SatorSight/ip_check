{% extends 'base.admin.html.twig' %}
{% block body %}
    <h2>IP маска</h2>
    <table class="table table-striped">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ iPMask.id }}</td>
        </tr>
        <tr>
            <th>Макро регион</th>
            <td>{{ iPMask.macroRegion }}</td>
        </tr>
        <tr>
            <th>Регион</th>
            <td>{{ iPMask.region }}</td>
        </tr>
        <tr>
            <th>Маска</th>
            <td>{{ iPMask.mask }}</td>
        </tr>
        </tbody>
    </table>
    <hr>
    <div class="btn-group">
        <a href="{{ path('admin_ipmasks_edit', { 'id': iPMask.id }) }}">
            <button type="button" class="btn btn-primary">Редактировать</button>
        </a>
        <a href="{{ path('admin_ipmasks_index') }}">
            <button type="submit" class="btn btn-default">Назад к списку</button>
        </a>
    </div>
    <hr>
    {{ form_start(delete_form) }}
    <button type="submit" class="btn btn-danger">Удалить</button>
    {{ form_end(delete_form) }}
    <hr>
{% endblock %}